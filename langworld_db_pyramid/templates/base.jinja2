<!DOCTYPE html>
<html lang="{{request.locale_name}}">
    <head>
        <meta charset="utf-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <meta name="description" content="Languages of the World Database">
        <meta name="author" content="Institute of Linguistics, Russian Academy of Sciences">
        <link rel="shortcut icon" href="{{request.static_url('langworld_db_pyramid:static/images/favicon.png')}}">

        <title>{% trans %}БД «Языки мира»{% endtrans %}: {% block title %}{% endblock title %}</title>

        <link href="{{request.static_url('langworld_db_pyramid:static/css/w3.css')}}" rel="stylesheet">
        <link href="{{request.static_url('langworld_db_pyramid:static/css/w3-theme-blue-grey.css')}}" rel="stylesheet">

        <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Bitter&family=Raleway">
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">

        <style>
            .w3-sidebar {
              z-index: 3;
              width: 250px;
              top: 43px;
              bottom: 0;
              height: inherit;
            }
        </style>

        {% block custom_css %}
        {% endblock custom_css %}


    </head>

    <body>

    <!-- Navbar -->
    <div class="w3-top">
      <div class="w3-bar w3-theme w3-top w3-left-align w3-large">
        <a class="w3-bar-item w3-button w3-right w3-hide-large w3-hover-white w3-large w3-theme-l1" href="javascript:void(0)" onclick="w3_open()"><i class="fa fa-bars"></i></a>

        {% if request.locale_name == 'ru' %}
            {% set link_text = "Switch to English" %}
            {% if '/ru/' in request.url %}
                {% set target = request.url.replace('/ru/', '/en/') %}
            {% elif request.url == request.host_url + "/" %}
                {% set target = request.host_url + "/en/home" %}
            {% else %}
                {% set target = request.host_url + "/en" + request.url.replace(request.host_url, "") %}
            {% endif %}
        {% else %}
            {% set link_text = "Русская версия" %}
            {% set target = request.url.replace('/en/', '/ru/') %}
        {% endif %}

        <a href="{{target}}" class="w3-bar-item w3-button w3-theme-l1 w3-right">{{ link_text }}</a>

        <a href="/{{request.locale_name}}/home" class="w3-bar-item w3-button w3-hide-small w3-hover-white">{% trans %}Главная{% endtrans %}</a>
        <a href="/{{request.locale_name}}/doculects/list" class="w3-bar-item w3-button w3-hide-small w3-hover-white">{% trans %}Список языков{% endtrans %}</a>
        <a href="/{{request.locale_name}}/doculects/map" class="w3-bar-item w3-button w3-hide-small w3-hover-white">{% trans %}Карта языков{% endtrans %}</a>
        <a href="/{{request.locale_name}}/features/list" class="w3-bar-item w3-button w3-hide-small w3-hover-white">{% trans %}Признаки{% endtrans %}</a>
        <a href="/{{request.locale_name}}/family/_all" class="w3-bar-item w3-button w3-hide-small w3-hover-white">{% trans %}Генеалогия{% endtrans %}</a>
        <a href="/{{request.locale_name}}/query_wizard" class="w3-bar-item w3-button w3-hide-small w3-hover-white">{% trans %}Мастер запросов{% endtrans %}</a>

